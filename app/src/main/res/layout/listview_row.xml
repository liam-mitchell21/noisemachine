<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/accel_icon" android:id="@+id/imageViewID"
            android:layout_weight="@android:dimen/app_icon_size"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical">
        <TextView
                android:text="TextViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nameTextViewID" android:textSize="18sp"
                android:textStyle="bold"/>
        <TextView
                android:text="TextViewInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoTextViewID" android:textSize="14sp"
                android:gravity="right"/>
    </LinearLayout>
</LinearLayout>